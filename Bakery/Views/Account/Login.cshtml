@{
  Layout = "_Layout";
}

@using Bakery.ViewModels

@model LoginViewModel

<h2><strong>User Account Login:</strong></h2>
<h4>Uh Oh! Only logged in users can access Pierre's Flavors and Treats. Please sign in below.</h4>
<hr />
@using (Html.BeginForm())
{
    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email)

    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password)

    <input type="submit" value="Log in" class="btn btn-default" />

    <p>Don't have an account? <strong>@Html.ActionLink("Register", "Register")</strong> here to start adding treats and flavors!</p>
    <p>@Html.ActionLink("Home", "Index", "Home")</p>
}
